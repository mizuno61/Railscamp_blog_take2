<!DOCTYPE html>
<html>
<head lang="ja">
    <meta charset="UTF-8">
    <title>Rails Camp Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header>
      <p id="logo"><a href="/">RailsCamp<span>Blog</span></a></p>
      <nav>
          <ul>
              <li><a href="/">トップ</a></li>
              <% if user_signed_in? %>
              <li><a href="/articles/new">新規投稿</a></li>
              <li><a href="/users/sign_out" method="delete">ログアウト</a></li>
              <% else %>
              <li><a href="/users/sign_up">ユーザー登録</a></li>
              <li><a href="/users/sign_in">ログイン</a></li>
              <div class="clear"></div>
              <% end %>
          </ul>
      </nav>
      <div class="clear"></div>
  </header>
    <%= yield %>
    <footer>
        <div id="footer_inner">
            <p>Copyright RailsCamp 2015 All Rights Reserved</p>
        </div>
    </footer>
  </body>
</html>
